<!DOCTYPE html>
<html>

  <% include header %>
  <% include navbar %>

  <body>
    <div class="index">
        <div class="row">
            <div class="col-md-2 col-lg-2 sidebar">
                <ul class="nav nav-sidebar text-center">
                    <h3 class="text-left sidebarHeaderText">Camera</h3>
                    <li><label id="runningBtn" class="btn btn-success">Running</label></li>
                    <li><label id="recordingBtn" class="btn btn-danger">Recording</label></li>
                    <li><label id="nightBtn" class="btn btn-danger">Night-vision</label></li>
                    <hr />

                    <h3 class="text-left sidebarHeaderText">Options</h3>
                    <li>
                        <h4 class="text-left sidebarHeaderText">Quality</h4>
                        <input id="qualitySlider" type="text" data-slider-min="5" data-slider-max="100" data-slider-step="5" data-slider-value="10"></input><span id="qualitySliderValue" class="h4">10</span>
                    </li>
                    <li>
                        <h4 class="text-left sidebarHeaderText">Width</h4>
                            <input id="widthSlider" type="text" data-slider-min="120" data-slider-max="1200" data-slider-step="120" data-slider-value="640"></input><span id="widthSliderValue" class="h4">640</span>
                    </li>
                    <li>
                        <h4 class="text-left sidebarHeaderText">Height</h4>
                        <input id="heightSlider" type="text" data-slider-min="120" data-slider-max="800" data-slider-step="120" data-slider-value="480"></input><span id="heightSliderValue" class="h4">480</span>
                    </li>
                    <hr />

                    <h3 class="text-left sidebarHeaderText">Other(not implemented)</h3>
                    <li>
                      <h4 class="text-left sidebarHeaderText">Exposure</h4>
                      <select class="form-control">
                        <option>Auto</option>
                        <option>Off</option>
                        <option>Night</option>
                        <option>Verylong</option>
                        <option>Sports</option>
                        <option>Snow</option>
                      </select>
                    </li>
                    <li>
                      <h4 class="text-left sidebarHeaderText">Effect</h4>
                      <select class="form-control">
                        <option>None</option>
                        <option>Negative</option>
                        <option>Solarise</option>
                        <option>Oilpaint</option>
                        <option>Watercolour</option>
                      </select>
                    </li>
                </ul>
            </div>

            <div class="col-xs-12 col-md-10 col-md-offset-2 col-lg-7 col-lg-offset-2 main">
                <img id="img" class="image-view  img-responsive"/>
            </div>

            <div class="col-xs-10 col-md-8 col-lg-3 col-md-offset-2 col-lg-offset-0 col-xs-offset-2">
                <div class="col-lg-1 col-md-4 bars" id="CPUChart"></div>
                <div class="progress vertical">
                      <div id="RAMIdle" class="progress-bar progress-bar-success"></div>
                      <div id="RAMOther" class="progress-bar progress-bar-warning"></div>
                      <div id="RAMNode" class="progress-bar progress-bar-danger"></div>
                </div>
            </div>
        </div>

        <div id="push"></div>
    </div>
    <% include footer %>


    
    

