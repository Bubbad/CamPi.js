<!DOCTYPE html>
<html>

  <% include header %>
  <% include navbar %>

  <body>
    <div>
      <div class="row">
        <div class="col-md-2 col-lg-2 sidebar">
          <ul class="nav nav-sidebar text-center">
            <h3 class="text-left sidebarHeaderText">Camera</h3>
            <li><label id="runningBtn" class="btn btn-success">Running</label></li>
            <li><label id="recordingBtn" class="btn btn-danger">Recording</label></li>
            <li><label id="nightBtn" class="btn btn-danger">Night-vision</label></li>
            <hr />

            <h3 class="text-left sidebarHeaderText">Options</h3>
            <li>
                <h4 class="text-left sidebarHeaderText">Quality</h4>
                <input id="qualitySlider" type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="3"></input><span id="qualitySliderValue" class="h4">64</span>
            </li>
            <li>
                <h4 class="text-left sidebarHeaderText">Width</h4>
                <input id="widthSlider" type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="3"></input><span id="widthSliderValue" class="h4">64</span>
            </li>
            <li>
                <h4 class="text-left sidebarHeaderText">Height</h4>
                <input id="heightSlider" type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="3"></input><span id="heightSliderValue" class="h4">64</span>
            </li>
            <hr />
          </ul>
        </div>

        <div class="col-xs-12 col-md-10 col-md-offset-2 col-lg-7 col-lg-offset-2 main">
          <p id="hej"></p>
          <img id="img" class="image-view img-thumbnail img-responsive"/>
        </div>

        <div class="col-xs-10 col-md-8 col-lg-3 col-md-offset-2 col-lg-offset-0 col-xs-offset-2">
          <div class="col-lg-1 col-md-4" id="CPUChart"></div>
        </div>
      </div>
    </div>

    

    <script src="http://code.jquery.com/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js" type="text/javascript"></script>
    
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript" src="/bootstrap-slider.js"></script>
    <script src="/index.js" type="text/javascript" ></script>
  </body>
</html>